rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ==============================
       USERS (Profil & Préférences)
    ============================== */
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;

      // On autorise la modification du rôle pour que l'utilisateur puisse devenir enseignant
      allow update: if request.auth != null && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['plan', 'aiUsage', 'chatUsage', 'isPremium', 'classes']);
      
      // Capsules personnelles stockées en sous-collection
      match /capsules/{capId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    /* ==============================
       CLASSES (Groupes d'étude)
    ============================== */
    match /classes/{classId} {
      allow read: if request.auth != null && (
        resource.data.teacherId == request.auth.uid || 
        request.auth.uid in resource.data.memberIds
      );

      // Création gérée par Cloud Function, mais on laisse un accès client basique pour la flexibilité initiale
      allow create: if request.auth != null;

      allow update, delete: if request.auth != null && 
        resource.data.teacherId == request.auth.uid;

      // MODULES PARTAGÉS DANS LA CLASSE
      match /capsules/{capId} {
        allow read: if request.auth != null && (
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid || 
          request.auth.uid in get(/databases/$(database)/documents/classes/$(classId)).data.memberIds
        );
        allow write: if request.auth != null && 
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
      }
    }

    /* ==============================
       INVITATIONS (Codes d'accès)
    ============================== */
    match /invitations/{code} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}