rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * PROFILS UTILISATEURS
     * - Lecture/Création : Autorisé pour le propriétaire.
     * - Mise à jour : Autorisé pour le propriétaire, MAIS on protège les champs sensibles.
     */
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      
      allow update: if request.auth != null && request.auth.uid == userId
                    // Empêche l'utilisateur de modifier lui-même son plan ou sa conso IA
                    && !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['plan', 'aiUsage', 'chatUsage', 'isPremium']);
    }

    /**
     * INVITATIONS
     * - Nécessaire pour que le client puisse vérifier un code d'invitation.
     */
    match /invitations/{code} {
      allow read: if request.auth != null;
      // La création/suppression est gérée par les Cloud Functions (Admin SDK)
      allow write: if false;
    }

    /**
     * CLASSES / GROUPES
     * - Lecture : Si l'utilisateur est le créateur (teacherId) ou un membre (memberIds).
     * - Création : Autorisée pour tout utilisateur connecté (le rôle est vérifié côté backend).
     * - Modif/Suppression : Uniquement pour le professeur propriétaire.
     */
    match /classes/{classId} {
      allow read: if request.auth != null && (
        resource.data.teacherId == request.auth.uid || 
        request.auth.uid in resource.data.memberIds
      );
      
      allow create: if request.auth != null;
        
      allow update, delete: if request.auth != null && 
        resource.data.teacherId == request.auth.uid;

      // MODULES PARTAGÉS DANS LA CLASSE
      match /capsules/{capId} {
        allow read: if request.auth != null && (
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid || 
          request.auth.uid in get(/databases/$(database)/documents/classes/$(classId)).data.memberIds
        );
        allow write: if request.auth != null && 
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
      }
    }

    /**
     * MODULES PERSONNELS (Sous-collection de l'utilisateur)
     * - Accès total réservé au propriétaire.
     */
    match /users/{userId}/capsules/{capId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}