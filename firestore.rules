rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ==============================
       USERS (Profil & Préférences)
    ============================== */
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;

      // On retire 'role' de la liste des champs interdits pour permettre 
      // à l'utilisateur de passer de 'student' à 'teacher'
      allow update: if request.auth != null && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['plan', 'aiUsage', 'chatUsage', 'isPremium', 'classes']);
      
      // Capsules personnelles stockées en sous-collection
      match /capsules/{capId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    /* ==============================
       CLASSES (Groupes d'étude)
    ============================== */
    match /classes/{classId} {
      // Lecture : Professeur propriétaire OU membre listé dans memberIds
      allow read: if request.auth != null && (
        resource.data.teacherId == request.auth.uid || 
        request.auth.uid in resource.data.memberIds
      );

      // Création : Autorisée pour tout utilisateur connecté. 
      // La vérification métier "est-il prof ?" est gérée de manière plus fiable 
      // par la Cloud Function 'createClass'.
      allow create: if request.auth != null;

      // Gestion : Uniquement le professeur
      allow update, delete: if request.auth != null && 
        resource.data.teacherId == request.auth.uid;

      // MODULES PARTAGÉS DANS LA CLASSE
      match /capsules/{capId} {
        allow read: if request.auth != null && (
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid || 
          request.auth.uid in get(/databases/$(database)/documents/classes/$(classId)).data.memberIds
        );
        allow write: if request.auth != null && 
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
      }
    }

    /* ==============================
       INVITATIONS (Codes d'accès)
    ============================== */
    match /invitations/{code} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}