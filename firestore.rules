
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // L'utilisateur peut mettre Ã  jour son profil SAUF les champs sensibles
      allow update: if request.auth != null && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys()
                       .hasAny(['plan', 'aiUsage', 'isPremium']);
                       
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/capsules/{capsuleId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /groups/{groupId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (request.auth.uid in resource.data.memberIds);
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      match /capsules/{capsuleId} {
        allow read, write: if request.auth != null && (get(/databases/$(database)/documents/groups/$(groupId)).data.memberIds.hasAny([request.auth.uid]));
      }
    }
  }
}
