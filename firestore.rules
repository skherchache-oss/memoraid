rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ==============================
       USERS (profil utilisateur)
    ============================== */
    match /users/{userId} {
      // Lire uniquement son propre profil
      allow read: if request.auth != null
                  && request.auth.uid == userId;

      // Mise à jour autorisée SAUF champs sensibles
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data)
                      .affectedKeys()
                      .hasAny([
                        'role',
                        'plan',
                        'aiUsage',
                        'classes'
                      ]);

      // Création autorisée (signup)
      allow create: if request.auth != null
                    && request.auth.uid == userId;

      allow delete: if false;
    }

    /* ==============================
       CLASSES
    ============================== */
    match /classes/{classId} {

      // Lecture : prof propriétaire OU élève membre
      allow read: if request.auth != null
        && (
          resource.data.teacherId == request.auth.uid
          || request.auth.uid in resource.data.memberIds
        );

      // Création : uniquement un enseignant
      allow create: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
          .data.role == 'teacher';

      // Modification / suppression : uniquement le prof
      allow update, delete: if request.auth != null
        && resource.data.teacherId == request.auth.uid;
    }

    /* ==============================
       MODULES / CAPSULES
    ============================== */
    match /modules/{moduleId} {

      // Lecture :
      // - propriétaire
      // - OU membre de la classe associée
      allow read: if request.auth != null
        && (
          resource.data.ownerId == request.auth.uid
          || (
            resource.data.classId != null
            && request.auth.uid in
              get(/databases/$(database)/documents/classes/$(resource.data.classId))
              .data.memberIds
          )
        );

      // Création / modification :
      // uniquement le propriétaire (prof ou élève)
      allow create, update: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid;

      allow delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    /* ==============================
       INVITATIONS (codes)
    ============================== */
    match /invitations/{code} {
      // Lecture autorisée (vérification du code)
      allow read: if request.auth != null;

      // Écriture STRICTEMENT interdite côté client
      allow write: if false;
    }
  }
}
